<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


	
	<!-- bean으로 바로 지정할 수 있다. -->
	<bean name="tv" 
		class="net.developia.xcispring01.di101.SamsungTV">
		<property name="speaker"  ref="speaker"/> <!-- setter를 통해 주입 -->
	</bean>
	
	<bean name="speaker" class="net.developia.xcispring01.di101.HarmanSpeaker"/>
	<!-- 
		Spring container에서 
		import net.developia.xcispring01.di101.SamsungTV;
		...
		SamsungTV tv = new SamsungTV(); 와 같아진다. 
	 -->
	 
	 
</beans>
